<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">48dp</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryVariant</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@color/colorPrimaryVariant</item>
        <item name="boxStrokeColor">@color/colorPrimaryVariant</item>
        <item name="hintTextColor">@color/colorPrimaryVariant</item>
    </style>

    <!-- Custom theme for Extended Floating Action Button -->
    <style name="CustomExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="rippleColor">@color/design_default_color_on_secondary</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="RoundedFAB" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomDropDownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:popupBackground">@color/grayLight1</item>
    </style>

    <style name="FullScreenBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Add this to your styles.xml file -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
    </style>

    <style name="Widget.App.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="behavior_peekHeight">512dp</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_hideable">true</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>