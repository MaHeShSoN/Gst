<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/grayLight1"
    app:strokeWidth=".5dp"
    android:transitionName="order_card"
    app:cardCornerRadius="8dp"
    android:id="@+id/orderlist_rvitem_container"
    app:strokeColor="@color/black"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">


        <!-- Customer Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:fontFamily="@font/nototto"
                android:text="Mahesh Soni"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Order #: 12345"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/nototto"
                android:textStyle="bold"
                android:textColor="@color/black" />


        </LinearLayout>

        <!-- Address -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/nototto"
            android:maxLines="1"
            android:text="Sathin, Pipar City, Jodhpur"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tvCustomerNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nototto"
            android:text="916677604"
            android:textSize="12sp" />
        <!-- Delivery Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:fontFamily="@font/nototto"
                android:text="Delivery Date: "
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDeliveryDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nototto"
                android:text="02/01/2025"
                android:textColor="@color/redForSub"
                android:textSize="12sp" />

            <!-- Delivery Status Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipDeliveryStatus"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:checkable="false"
                android:fontFamily="@font/nototto"
                android:text="Pending"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:chipBackgroundColor="@color/Red" />
        </LinearLayout>

        <!-- Order Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp">



            <TextView
                android:id="@+id/tvTotalItemsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:fontFamily="@font/nototto"
                android:textColor="@color/black"
                android:text="Total Items:"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotalItems"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nototto"
                android:text="5"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotalPrePaymentTEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nototto"
                android:text="Pre-Payment:"
                android:layout_weight=".1"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTotalPrePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nototto"
                android:text="â‚¹120000000000"
                android:layout_weight=".1"
                android:gravity="end"
                android:textColor="@color/GreenForDone"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
